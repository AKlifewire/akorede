{
  "sections": [
    {
      "id": "main",
      "title": "{{deviceName}}",
      "type": "card",
      "controls": ["power", "status"]
    },
    {
      "id": "details",
      "title": "Device Details",
      "type": "card",
      "controls": ["info"]
    }
  ],
  "controls": [
    {
      "id": "power",
      "type": "switch",
      "label": "Power",
      "command": "power",
      "valueKey": "power",
      "trueValue": true,
      "falseValue": false
    },
    {
      "id": "status",
      "type": "status",
      "label": "Status",
      "valueKey": "online",
      "onlineText": "Online",
      "offlineText": "Offline"
    },
    {
      "id": "info",
      "type": "info",
      "items": [
        {
          "label": "Device ID",
          "value": "{{deviceId}}"
        },
        {
          "label": "Model",
          "value": "{{deviceModel}}"
        },
        {
          "label": "Manufacturer",
          "value": "{{deviceManufacturer}}"
        },
        {
          "label": "Location",
          "value": "{{deviceLocation}}"
        }
      ]
    }
  ]
}